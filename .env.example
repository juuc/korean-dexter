# Korean Dexter Environment Variables
# Copy this file to .env and fill in your API keys

# ========== Core (Required for MVP) ==========

# OpenDART (금융감독원 전자공시시스템)
# Register at: https://opendart.fss.or.kr
OPENDART_API_KEY=

# KIS (한국투자증권 Open API)
# Register at: https://apiportal.koreainvestment.com
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_PAPER_TRADING=true  # Use simulation endpoint (set to false for production)

# ========== LLM Provider (Choose one) ==========

# Anthropic (Recommended)
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# ========== Evaluation (Optional) ==========

# LangSmith (for eval tracking)
LANGCHAIN_API_KEY=

# ========== Enrichment (v1.1, Optional) ==========

# BOK ECOS (한국은행 경제통계)
# Register at: https://ecos.bok.or.kr/api/#/
BOK_API_KEY=

# KOSIS (통계청 국가통계포털)
# Register at: https://kosis.kr/openapi/
KOSIS_API_KEY=

# BigKinds (한국언론진흥재단 뉴스빅데이터)
# Register at: https://www.bigkinds.or.kr
BIGKINDS_API_KEY=
